<body>
    <div class="container">
        <h1>Website Launcher</h1>
        <p class="subtitle">Enter any web address below and it will open in a new browser tab</p>
        
        <div class="launcher-form">
            <div class="input-group">
                <label for="urlInput">Website Address (URL):</label>
                <input type="text" id="urlInput" placeholder="https://example.com" autofocus>
            </div>
            
            <div class="button-group">
                <button id="launchBtn" type="button">Launch Website</button>
                <button id="clearBtn" type="button">Clear</button>
            </div>
        </div>
        
        <div id="status" class="status"></div>
        
        <div class="examples">
            <h3>Try these examples:</h3>
            <p>Click on any of the websites below to launch them instantly:</p>
            <div class="example-list">
                <div class="example-item" data-url="https://www.wikipedia.org">Wikipedia</div>
                <div class="example-item" data-url="https://www.youtube.com">YouTube</div>
                <div class="example-item" data-url="https://www.github.com">GitHub</div>
                <div class="example-item" data-url="https://www.openai.com">OpenAI</div>
                <div class="example-item" data-url="https://www.reddit.com">Reddit</div>
                <div class="example-item" data-url="https://www.nytimes.com">New York Times</div>
            </div>
        </div>
    </div>
    
    <footer>
        <p>Website Launcher &copy; 2023 | Enter a valid URL including "http://" or "https://"</p>
    </footer>

    <script>
        // DOM elements
        const urlInput = document.getElementById('urlInput');
        const launchBtn = document.getElementById('launchBtn');
        const clearBtn = document.getElementById('clearBtn');
        const statusDiv = document.getElementById('status');
        const exampleItems = document.querySelectorAll('.example-item');
        
        // Function to validate and format URL
        function formatUrl(inputUrl) {
            let url = inputUrl.trim();
            
            // Check if URL already has a protocol
            if (!url.startsWith('http://') && !url.startsWith('https://')) {
                url = 'https://' + url;
            }
            
            return url;
        }
        
        // Function to show status message
        function showStatus(message, isError = false) {
            statusDiv.textContent = message;
            statusDiv.className = 'status ' + (isError ? 'error' : 'success');
            statusDiv.style.display = 'block';
            
            // Hide status after 5 seconds
            setTimeout(() => {
                statusDiv.style.display = 'none';
            }, 5000);
        }
        
        // Function to launch website
        function launchWebsite() {
            const inputValue = urlInput.value.trim();
            
            if (!inputValue) {
                showStatus('Please enter a website address', true);
                urlInput.focus();
                return;
            }
            
            try {
                const formattedUrl = formatUrl(inputValue);
                
                // Validate URL format
                new URL(formattedUrl);
                
                // Open the URL in a new tab
                window.open(formattedUrl, '_blank');
                
                // Show success message
                showStatus(`Successfully opened: ${formattedUrl}`);
                
                // Clear the input
                urlInput.value = '';
            } catch (error) {
                showStatus('Invalid URL format. Please enter a valid web address.', true);
                console.error('URL error:', error);
            }
        }
        
        // Event Listeners
        launchBtn.addEventListener('click', launchWebsite);
        
        clearBtn.addEventListener('click', () => {
            urlInput.value = '';
            urlInput.focus();
            showStatus('Input cleared', false);
        });
        
        // Launch on Enter key press
        urlInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                launchWebsite();
            }
        });
        
        // Add click events for example items
        exampleItems.forEach(item => {
            item.addEventListener('click', () => {
                const url = item.getAttribute('data-url');
                urlInput.value = url;
                launchWebsite();
            });
        });
        
        // Add input validation as user types
        urlInput.addEventListener('input', () => {
            statusDiv.style.display = 'none';
        });
        
        // Add some helpful instructions on page load
        window.addEventListener('load', () => {
            urlInput.focus();
            console.log('Website Launcher ready! Enter a URL and click "Launch Website" to open it in a new tab.');
        });
    </script>
</body>
